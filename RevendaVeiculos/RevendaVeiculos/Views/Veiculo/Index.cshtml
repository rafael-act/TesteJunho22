@model IEnumerable<RevendaVeiculos.Dominio.Entidades.Veiculo>


@if (ViewBag.Mensagem != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Confirma
    </div>
}
<div class="text-center">
    <h1 class="display-4">Veiculo</h1>
    <p>Lista de veículos</p>
</div>
<div class="text-right mb-5">
    @Html.ActionLink("Novo", "Novo", "Veiculo", null, new { @class = "btn btn-primary" })
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Renavam</th>
            <th scope="col">Marca</th>
            <th scope="col">Modelo</th>
            <th scope="col">Ano</th>
            <th scope="col">Quilometragem</th>
            <th scope="col">Valor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToList())
        {
        <tr>
            <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
            <td>@Html.DisplayFor(modelItem => item.Renavam)</td>
            <td>@Html.DisplayFor(modelItem => item.Marca.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
            <td>@Html.DisplayFor(modelItem => item.AnoModelo)</td>
            <td>@Html.DisplayFor(modelItem => item.Quilometragem)</td>
            <td>@Html.DisplayFor(modelItem => item.Valor)</td>
          
            <td> @Html.ActionLink("Editar", "Editar", "Veiculo", new { id = 1 }, new { @class = "btn btn-secondary" })</td>
        </tr>
        }
    </tbody>
</table>